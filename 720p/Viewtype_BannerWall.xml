<includes>
  <include name="nativeposters">
    <itemlayout height="110" width="560">
      <control type="image">
        <posx>5</posx>
        <posy>5</posy>
        <width>550</width>
        <height>103</height>
        <scalediffuse>true</scalediffuse>
        <texture background="true" diffuse="thumbs/banner_wall_mask.png">common/black.png</texture>
      </control>
      <control type="label">
        <posx>280</posx>
        <posy>5</posy>
        <width>550</width>
        <height>103</height>
        <aligny>center</aligny>
        <align>center</align>
        <textcolor>white</textcolor>
        <label>$INFO[ListItem.Label]</label>
        <font>Font_Bold24</font>
      </control>
      <control type="image">
        <posx>5</posx>
        <posy>5</posy>
        <width>550</width>
        <height>103</height>
        <aspectratio scalediffuse="false">stretch</aspectratio>
        <texture background="true" diffuse="thumbs/banner_wall_mask.png" />
        <info>ListItem.Path,,banner.jpg</info>
        <visible>Skin.HasSetting(TVShowsUsePosters)</visible>
      </control>
      <control type="image">
        <posx>5</posx>
        <posy>5</posy>
        <width>550</width>
        <height>103</height>
        <aspectratio scalediffuse="false">stretch</aspectratio>
        <texture background="true" diffuse="thumbs/banner_wall_mask.png">DefaultBanner.png</texture>
        <info>ListItem.Icon</info>
        <visible>!Skin.HasSetting(TVShowsUsePosters)+!IsEmpty(ListItem.Thumb)</visible>
      </control>
      <control type="image">
        <posx>5</posx>
        <posy>5</posy>
        <width>550</width>
        <height>103</height>
        <scalediffuse>true</scalediffuse>
        <colordiffuse>55FFFFFF</colordiffuse>
        <texture background="true" diffuse="thumbs/banner_wall_mask.png">common/black.png</texture>
        <visible>!IsEmpty(ListItem.Thumb)</visible>
      </control>
      <control type="image">
        <posx>495</posx>
        <posy>5</posy>
        <width>60</width>
        <height>60</height>
        <include>OverlayVisibility0</include>
      </control>
    </itemlayout>
    <focusedlayout height="110" width="560">
      <control type="group">
        <animation effect="zoom" center="auto" start="110" end="120" time="200" tween="cubic" easing="out" reversible="false">Focus</animation>
        <control type="image">
          <posx>30</posx>
          <posy>5</posy>
          <width>500</width>
          <height>96</height>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <texture background="true" diffuse="thumbs/banner_wall_mask.png">common/black.png</texture>
        </control>
        <control type="label">
          <posx>280</posx>
          <posy>5</posy>
          <width>500</width>
          <height>96</height>
          <aligny>center</aligny>
          <align>center</align>
          <textcolor>white</textcolor>
          <label>$INFO[ListItem.Label]</label>
          <font>Font_Bold24</font>
        </control>
        <control type="image">
          <posx>30</posx>
          <posy>7</posy>
          <width>500</width>
          <height>96</height>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <texture background="true" diffuse="thumbs/banner_wall_mask.png" />
          <info>ListItem.Path,,banner.jpg</info>
          <visible>Skin.HasSetting(TVShowsUsePosters)</visible>
        </control>
        <control type="image">
          <posx>30</posx>
          <posy>7</posy>
          <width>500</width>
          <height>96</height>
          <aspectratio scalediffuse="false">stretch</aspectratio>
          <texture background="true" diffuse="thumbs/banner_wall_mask.png">DefaultBanner.png</texture>
          <info>ListItem.Icon</info>
          <visible>!Skin.HasSetting(TVShowsUsePosters)+!IsEmpty(ListItem.Thumb)</visible>
        </control>
        <control type="image">
          <posx>474</posx>
          <posy>7</posy>
          <width>55</width>
          <height>55</height>
          <include>OverlayVisibility0</include>
        </control>
        <control type="image">
          <posx>20</posx>
          <posy>-3</posy>
          <width>519</width>
          <height>115</height>
          <aspectratio>keep</aspectratio>
          <texture background="true">thumbs/banner_shadow.png</texture>
        </control>
      </control>
    </focusedlayout>
  </include>
  <include name="BannerWallHor">
    <control type="image">
      <posx>57</posx>
      <posy>98</posy>
      <width>20</width>
      <height>524</height>
      <texture>wall/wall_arrow.png</texture>
      <visible>Control.IsVisible(51)+!Control.HasFocus(109)</visible>
      <animation effect="slide" start="-100" end="0" delay="800" time="400" easing="out" tween="cubic">WindowOpen</animation>
    </control>
    <control type="image">
      <posx>1203</posx>
      <posy>98</posy>
      <width>20</width>
      <height>524</height>
      <texture flipx="true">wall/wall_arrow.png</texture>
      <visible>Control.IsVisible(51)+!Control.HasFocus(109)</visible>
      <animation effect="slide" start="100" end="0" delay="800" time="400" easing="out" tween="cubic">WindowOpen</animation>
    </control>
    <control type="panel" id="51">
      <posx>80</posx>
      <posy>90</posy>
      <width>1120</width>
      <height>555</height>
      <onleft>51</onleft>
      <onright>51</onright>
      <onup>SetFocus(9000)</onup>
      <ondown>60</ondown>
      <visible>Container.Content(tvshows)</visible>
      <viewtype label="$LOCALIZE[31231]">Wide Icon</viewtype>
      <pagecontrol>60</pagecontrol>
      <scrolltime>300</scrolltime>
      <preloaditems>2</preloaditems>
      <orientation>horizontal</orientation>
      <include>nativeposters</include>
    </control>
    <control type="scrollbar" id="60">
      <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(109)">Conditional</animation>
      <visible allowhiddenfocus="true">Control.HasFocus(60)</visible>
      <onup>51</onup>
      <ondown>51</ondown>
    </control>

  </include>
  <include name="BannerWallVert">
    <control type="panel" id="51">
      <posx>80</posx>
      <posy>83</posy>
      <width>1120</width>
      <height>553</height>
      <onleft>SetFocus(9000)</onleft>
      <onright>60</onright>
      <onup>51</onup>
      <ondown>51</ondown>
      <visible>Container.Content(tvshows)</visible>
      <viewtype label="$LOCALIZE[31231]">Wide Icon</viewtype>
      <pagecontrol>60</pagecontrol>
      <scrolltime>200</scrolltime>
      <preloaditems>2</preloaditems>
      <orientation>vertical</orientation>
      <include>nativeposters</include>
    </control>
    <control type="scrollbar" id="60">
      <posx>1227</posx>
      <posy>92</posy>
      <width>65</width>
      <height>548</height>
      <visible allowhiddenfocus="true">Control.HasFocus(60)</visible>
      <texturesliderbackground>views/scrollbarbacklist.png</texturesliderbackground>
      <texturesliderbar>-</texturesliderbar>
      <texturesliderbarfocus>-</texturesliderbarfocus>
      <textureslidernib>views/scrollbarnub-nofocus.png</textureslidernib>
      <textureslidernibfocus>views/scrollbarnub-focus.png</textureslidernibfocus>
      <orientation>vertical</orientation>
      <showonepage>false</showonepage>
      <pulseonselect>yes</pulseonselect>
      <onleft>51</onleft>
      <onright>51</onright>
    </control>
  </include>
  <include name="BannerWall">
    <control type="group">
      <visible>Control.IsVisible(51)</visible>
      <include>Furniture_WallVignette</include>
      <include condition="!Skin.HasSetting(BannerwallVertical)">BannerWallHor</include>
      <include condition="Skin.HasSetting(BannerwallVertical)">BannerWallVert</include>
      <control type="group">
        <visible>!Control.HasFocus(109)+!Control.HasFocus(60)</visible>
        <include>Animation_HideMultiplex</include>
        <include>SecondLabelFloor</include>
        <include>FirstLabelFloor</include>
      </control>
    </control>
  </include>
</includes>